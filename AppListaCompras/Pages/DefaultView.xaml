<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaCompras.Pages.DefaultView"
             Title="DefaultView"
             BackgroundColor="#F2DFB5">

    <Grid Padding="0">
        <StackLayout Spacing="0">
            <StackLayout BackgroundColor="#88C273" Padding="20" Orientation="Vertical">
                <Label Text="Hola, [Usuario]" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       HorizontalOptions="Start" />
            </StackLayout>

            <StackLayout BackgroundColor="#B03052" Padding="10" Orientation="Vertical">
                <Label Text="Menú Principal" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       HorizontalOptions="Start" />
                <HorizontalStackLayout Spacing="20" Padding="10">
                    <Button Text="Listas" 
                            BackgroundColor="#D81B60" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            CornerRadius="10" 
                            WidthRequest="100" 
                            Command="{Binding VerListasCommand}" />
                    <Button Text="Categorías" 
                            BackgroundColor="#E91E63" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            CornerRadius="10" 
                            WidthRequest="100" 
                            Command="{Binding VerCategoriasCommand}" />
                    <Button Text="Historial" 
                            BackgroundColor="#E91E63" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            CornerRadius="10" 
                            WidthRequest="100" 
                            Command="{Binding VerHistorialCommand}" />
                </HorizontalStackLayout>
            </StackLayout>
        </StackLayout>

        <StackLayout VerticalOptions="FillAndExpand" Padding="20" Margin="0,120,0,0">
            <CollectionView ItemsSource="{Binding ListasCompras}" Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" CornerRadius="10" BackgroundColor="White" HasShadow="True" Margin="0,10">
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding NombreLista}" FontSize="18" FontAttributes="Bold" TextColor="#333333" />
                                <Label Text="{Binding FechaCreacion, StringFormat='Creado el {0:dd/MM/yyyy}'}" 
                                       FontSize="14" TextColor="#777777" />
                                <Button Text="Ver Detalles" 
                                        FontSize="14" 
                                        BackgroundColor="#7E57C2" 
                                        TextColor="White" 
                                        CornerRadius="10" 
                                        Command="{Binding VerDetallesCommand}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="+"
                    FontSize="24"
                    BackgroundColor="#608BC1"
                    TextColor="White"
                    CornerRadius="30"
                    WidthRequest="60"
                    HeightRequest="60"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="EndAndExpand"
                    Margin="10"
                    Clicked="" />
        </StackLayout>
    </Grid>
</ContentPage>
